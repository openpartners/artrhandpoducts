!!!5
%html
%head
	%title Artrhandpoducts
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
	= javascript_include_tag 'application', 'data-turbolinks-track' => true 
	= csrf_meta_tags
%body
	%nav.navbar.navbar-default
		.container
			.navbar-brand= link_to "Art-Hand Studio Artystyczne", root_path

			- if admin_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "New product", new_product_path
					%li= link_to "Account", edit_admin_registration_path
					%li= link_to "Sign Out", destroy_admin_session_path, method: :delete
			- else
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Sign Up", new_admin_registration_path
					%li= link_to "Sign In", new_admin_session_path
	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert alert-info"
			
		= yield


